<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dimen_16"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_translate_dialog"
            android:padding="@dimen/dimen_8"
            android:textSize="@dimen/text_24"
            android:textColor="?colorOnSurface"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_from_language"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:drawablePadding="8dp"
                app:drawableTint="@android:color/secondary_text_dark"
                android:textAlignment="center"
                app:drawableEndCompat="@drawable/round_arrow_forward_24" />

            <TextView
                android:id="@+id/tv_to_language"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karakalpak"
                android:textAlignment="center"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_translated_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8"
            android:text="@string/sample_text_translate"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_14"
            android:drawablePadding="@dimen/dimen_8"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/close"
            app:cornerRadius="@dimen/dimen_8" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>