<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.theberdakh.ieltsyourself.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_topicsFragment"
            app:destination="@id/topicsFragment" />
    </fragment>
    <fragment
        android:id="@+id/topicsFragment"
        android:name="com.theberdakh.ieltsyourself.ui.topics.TopicsFragment"
        android:label="Topics"
        tools:layout="@layout/fragment_topics">
        <argument
            android:name="Game"
            app:argType="com.theberdakh.ieltsyourself.core.domain.model.Game"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.theberdakh.ieltsyourself.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/meFragment"
        android:name="com.theberdakh.ieltsyourself.ui.me.MeFragment"
        android:label="Me"
        tools:layout="@layout/fragment_me" />
</navigation>